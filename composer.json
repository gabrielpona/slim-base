{
    "name": "slim/slim-base",
    "description": "A Slim Framework skeleton application with Doctrine",
    "keywords": ["microframework", "rest", "router", "psr7","doctrine"],
    "homepage": "https://github.com/gabrielpona/slim-base",
    "license": "MIT",
    "authors": [
        {
            "name": "Gabriel PonÃ£",
            "email": "gabriel_pona@hotmail.com",
            "homepage": "https://twitter.com/gabriel_pona"
        }
    ],
    "require": {
        "php": ">=7.1",
        "doctrine/orm": "^2.6",
        "monolog/monolog": "^1.17",
        "rubellum/slim-blade-view": "^0.1.1",
        "slim/php-view": "^2.0",
        "slim/slim": "^3.1",
        "slim/flash": "^0.1.0",
        "slim/twig-view": "^2.1",
        "vlucas/phpdotenv": "^2.4"
    },
    "require-dev": {
        "phpunit/phpunit": ">=5.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"

        }
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }

}
