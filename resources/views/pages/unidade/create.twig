{% extends 'templates/restrito/main.twig' %}

{% block titulo %}
   Unidades
{% endblock %}
{% block subtitulo %}
   Criação
{% endblock %}
{% block local_controls %}
{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-lg-12 panel-grid">
            <div class="box">
                <div class="box-body">
                    <form role="form" method="POST" action="{{path_for('unidade.add')}}" enctype="multipart/form-data" class="form-unidade-add">
                    <div class="row">
                        <div class="col-md-9">
                            <div class="form-group-sm required">
                                <label class="small control-label" for="nome">Nome</label>
                                <input type="text" class="form-control no-caps" id="nome" name="unidade.nome" value="" required>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group-sm required">
                                <label class="small control-label" for="email">Sigla</label>
                                <input type="text" class="form-control no-caps" id="sigla" name="unidade.sigla" value="" required>
                            </div>
                        </div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group pull-right">
                                <a href="{{ path_for("unidade.list") }}" class="btn btn-sm btn-link btn-flat">Cancelar</a>
                                <button type="submit" class="btn btn-sm btn-primary btn-flat btn-save"><i class="fa fa-save"></i> Salvar</button>
                            </div>
                        </div>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block local_script %}
    <script type="text/javascript">
        $(document).ready(function(){


        });
    </script>
{% endblock %}