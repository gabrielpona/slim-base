{% extends 'templates/restrito/main.twig' %}
{% block titulo %}
    Unidades
{% endblock %}
{% block subtitulo %}
    listagem
{% endblock %}
{% block local_controls %}
    <a href="{{path_for('usuario.create')}}" class="btn btn-info btn-sm btn-flat">Criar nova</a>
{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-lg-12 panel-grid">
            <div class="box">
                <div class="box-body">
                    <table id="dt-usuarios" class="table table-striped table-bordered table-hover small" cellspacing="0" width="100%">
                        <thead>
                        <tr>
                            <th style="width: 40%">Nome</th>
                            <th style="width: 20%">Login</th>
                            <th style="width: 20%">E-mail</th>
                            <th style="width: 20%">Perfil</th>
                        </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block local_script %}
    <script type="text/javascript">
        $(document).ready(function(){

            var $tb = $('#dt-usuarios');

            var $grid = $tb.DataTable( {
                "processing": true,
                "serverSide": true,
                "ajax": {
                    "url": "{{path_for('usuario.list.json')}}",
                    "type": "POST"
                },
                "columns": [
                    { "data": "nome" },
                    { "data": "login" },
                    { "data": "email" },
                    { "data": "perfil" }
                ],
                "order": [ 0, "asc" ]
            });

            var contextMenuOpts = {
                selector: '.dataTable td:not([colspan])',
                items:{
                    detail: {
                        name: "Editar",
                        icon: "fa-edit",
                        disabled: false,
                        callback: function (key, opt) {
                            var id = opt.$trigger.parents('tr').attr('id');
                            window.location.href = (Main.Util.getBaseUrl("/painel/usuario/edit/" + id));
                        }
                    }
                }
            };
            $.contextMenu(contextMenuOpts);
        });
    </script>
{% endblock %}